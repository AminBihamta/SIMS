<table>
    <thead>
        <tr>
            <th>Message</th>
            <th>Equipment</th>
            <% if supervisor? %>

            <th>Status</th>
            <% end %>

            <% if supervisor? %>
            <th>Sent At</th>
            <% end %>

            <% if pic? %>
            <th>Received At</th>
            <% end %>


        </tr>
    </thead>
    <tbody>
        <% @notifications.each do |notification| %>
        <tr>
            <td><%= notification.message %></td>
            <td><%= notification.borrowing.equipment.Equipment_Name %></td>
            <% if supervisor? %>
            <td><%= notification.status %></td>
            <% end %>

            <td><%= notification.triggered_at.strftime('%d/%m/%Y %H:%M') %></td>
            <% if supervisor? %>
            <% end %>

        </tr>
        <% end %>
    </tbody>
</table>