<div class="frame">
  <header class="header">
    <button class="back-btn" onclick="history.back()">‚Üê</button>
    <!-- Search Form -->
    <div class="search-bar">
      <%= form_with url: borrowing_balance_sheet_path(@club), method: :get, local: true do %>
        <input type="text" name="search" id="search" placeholder="Search" value="<%= params[:search] %>" />
        <button type="submit">Search</button>
      <% end %>
    </div>
    <div class="user-icon">üë§</div>
  </header>

  <h2>All <%= @club.Club_Name %> Borrowings</h2>
  

  <table>
    <thead>
      <tr>
        <th>Equipment Name</th>
        <th>Club</th>
        <th>Borrowed Date</th>
        <th>Due Date</th>
        <th>Quantity</th>
        <th>Days Remaining</th>
        <th>PIC</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
      <% if @borrowings.any? %>
        <% @borrowings.each do |borrowing| %>
          <tr>
            <td><%= borrowing.equipment.Equipment_Name %></td>
            <td><%= borrowing.club.Club_Name %></td>
            <td><%= borrowing.borrow_date.strftime("%B %d, %Y") %></td>
            <td><%= borrowing.due_date.strftime("%B %d, %Y") %></td>
            <td><%= borrowing.quantity %></td>
            <td>
              <% days_remaining = (borrowing.due_date.to_date - Date.current).to_i %>
              <% if days_remaining > 0 %>
                <%= "#{days_remaining} days" %>
              <% elsif days_remaining == 0 %>
                Due today
              <% else %>
                <%= "#{days_remaining.abs} days overdue" %>
              <% end %>
            </td>
            <td><%= borrowing.pic_info %></td>
            <td><%= borrowing.status.capitalize %></td>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <td colspan="8">No borrowings found.</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>