<div class="frame">
  <header class="header">
    <button class="back-btn" onclick="history.back()">‚Üê</button>
    <div class="search-bar">
      <input type="text" id="search" placeholder="Search" />
    </div>
    <div class="user-icon">üë§</div>
  </header>

  <h2>All <%= @club.Club_Name %> Borrowings</h2> <!-- Dynamically updated title -->

  <table class="borrowing-table">
    <thead>
      <tr>
        <th>Equipment</th>
        <th>Quantity</th>
        <th>Borrower</th>
        <th>Date Borrowed</th>
        <th>Date Returned</th>
      </tr>
    </thead>
    <tbody>
      <% if @borrowings.any? %>
        <% @borrowings.each do |borrowing| %>
          <tr>
            <td><%= borrowing.equipment&.Equipment_Name || 'N/A' %></td>
            <td><%= borrowing.club&.Club_Name || 'N/A' %></td>
            <td><%= borrowing.borrow_date.strftime('%d/%m/%Y') %></td>
            <td><%= borrowing.due_date ? borrowing.due_date.strftime('%d/%m/%Y') : 'Not Returned' %></td>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <td colspan="5">No borrowings found.</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
