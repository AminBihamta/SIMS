<div class="frame">
  <header class="header">
    <button class="back-btn" onclick="history.back()">‚Üê</button>
    <div class="search-bar">
      <input type="text" id="search" placeholder="Search">
    </div>
    <div class="user-icon">üë§</div>
  </header>

  <h2 class="page-title">Update Borrowing</h2>
  <%= form_with model: @borrowing, local: true, class: "edit-borrowing-form" do |form| %>
    <div class="form-row">
      <%= form.label :equipment_id, "Name of Item", class: "form-label" %>
      <%= form.collection_select :equipment_id, @equipments, :id, :Equipment_Name, { prompt: "Select Equipment" }, class: "form-input" %>
    </div>

    <div class="form-row">
      <%= form.label :club_id, "Club", class: "form-label" %>
      <%= form.collection_select :club_id, @clubs, :Club_ID, :Club_Name, { prompt: "Select Club" }, class: "form-input" %>
    </div>

    <div class="form-row">
      <%= form.label :quantity, "Quantity", class: "form-label" %>
      <%= form.text_field :quantity, class: "form-input", inputmode: "numeric", pattern: "[0-9]*" %>
    </div>

    <div class="form-row">
      <%= form.label :borrow_date, "Borrow Date", class: "form-label" %>
      <%= form.date_field :borrow_date, class: "form-input" %>
    </div>

    <div class="form-row">
      <%= form.label :due_date, "Due Date", class: "form-label" %>
      <%= form.date_field :due_date, class: "form-input" %>
    </div>

    <div class="form-actions">
      <%= form.submit "Update Borrowing", class: "btn-submit" %>
    </div>
  <% end %>

  <div class="form-actions">
    <%= form_with url: borrowing_path(@borrowing), method: :delete, local: true do %>
      <button type="submit" class="btn-delete" data-confirm="Are you sure you want to delete this borrowing record?">Delete Borrowing</button>
    <% end %>
  </div>
</div>

<footer class="footer-nav">
  <button class="footer-btn">Equipment</button>
  <button class="footer-btn active">Borrow</button>
  <button class="footer-btn">Vendors</button>
</footer>
