<div class="frame">
  <header class="header">
    <button class="back-btn">‚Üê</button>
    <div class="search-bar">
      <input type="text" id="search" placeholder="Search">
    </div>
    <div class="user-icon">üë§</div>
  </header>

  <!-- Edit Borrowing Record Form -->
  <h2 class="page-title">Update Borrowing</h2>
  <%= form_with model: @borrowing, local: true, class: "edit-borrowing-form" do |form| %>
    <div>
      <%= form.label :equipment_id, "Name of Item" %>
      <%= form.collection_select :equipment_id, @equipments, :id, :Equipment_Name, { prompt: "Select Equipment" }, class: "form-input" %>
    </div>

    <div class="form-row">
      <%= form.label :club_id, "Club" %>
      <%= form.collection_select :club_id, @clubs, :Club_ID, :Club_Name, { prompt: "Select Club" }, class: "form-input" %>
    </div>

    <div class="form-row">
      <%= form.label :borrow_date, "Borrow Date" %>
      <%= form.date_field :borrow_date, class: "form-input" %>
    </div>

    <div class="form-row">
      <%= form.label :due_date, "Due Date" %>
      <%= form.date_field :due_date, class: "form-input" %>
    </div>

    <div class="form-actions">
      <%= link_to "Delete Borrowing", borrowing_path(@borrowing), method: :delete, class: "btn-delete", data: { confirm: "Are you sure?" } %>
      <%= form.submit "Update Borrowing", class: "btn-submit" %>
    </div>
  <% end %>
</div>

<footer class="footer-nav">
  <button class="footer-btn">Equipment</button>
  <button class="footer-btn active">Borrow</button>
  <button class="footer-btn">Vendors</button>
</footer>
