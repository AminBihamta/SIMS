<div class="frame">
    <header class="header">
        <button class="back-btn" onclick="history.back()">‚Üê</button>
        <div class="search-bar">
            <input type="text" id="search" placeholder="Search">
        </div>
        <div class="user-icon">üë§</div>
    </header>

    <div class="add-record">
        <%= link_to "Add Borrowing Record", new_borrowing_path, class: "add-borrowing-record" %>
    </div>

    <section class="club-selections">
        <div class="club-list">
            <div class="club-card">
                <p><strong>Super Club Borrowings</strong></p>
                <%= link_to "‚Üí", super_club_borrowings_borrowings_path, class: "btn-view-more" %>
            </div>
            <div class="club-card">
                <p><strong>Sub-club Borrowings</strong></p>
                <%= link_to "‚Üí", sub_club_borrowings_borrowings_path, class: "btn-view-more" %>
            </div>
        </div>
    </section>

    <section class="overdue-items">
        <h2>Overdue Items</h2>
        <div class="overdue-list">
            <% Borrowing.where(status: "overdue").each do |item| %>
                <div class="card overdue-card">
                    <div class="card-content">
                        <h3><%= item.equipment.Equipment_Name %></h3>
                        <p>Borrowed by: <%= item.pic_info %></p>
                        <p>Due date: <%= item.due_date.strftime("%B %d, %Y") %></p>
                        <p>Quantity: <%= item.quantity %></p>
                    </div>
                    <%= link_to "View Details", edit_borrowing_path(item), class: "card-link" %>
                </div>
            <% end %>
        </div>
    </section>

    <section class="borrowed-items">
        <h2>Borrowed Items</h2>
        <div class="borrowed-list">
            <% Borrowing.where(status: "borrowed").each do |item| %>
                <div class="card">
                    <div class="card-content">
                        <h3><%= item.equipment.Equipment_Name %></h3>
                        <p>Borrowed by: <%= item.pic_info %></p>
                        <p>Due date: <%= item.due_date.strftime("%B %d, %Y") %></p>
                        <p>Quantity: <%= item.quantity %></p>
                    </div>
                    <%= link_to "View Details", edit_borrowing_path(item), class: "card-link" %>
                </div>
            <% end %>
        </div>
    </section>
</div>