<div class="notification-page">
  <div class="notification-message">
    <% if flash[:notice] %>
      <h2 class="success"><%= flash[:notice] %></h2>
    <% elsif flash[:alert] %>
      <h2 class="error"><%= flash[:alert] %></h2>
    <% else %>
      <h2 class="info">No message provided</h2>
    <% end %>
  </div>

  <div class="notification-actions">
    <%= link_to 'Go Back to Borrowing List', borrowings_path, class: 'btn-back' %>
    <%= link_to 'Add Another Borrowing', new_borrowing_path, class: 'btn-add-new' %>
  </div>
</div>

<style>
.notification-page {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background-color: #f5f5f5;
  color: #333;
  font-family: Arial, sans-serif;
}

.notification-message h2 {
  font-size: 24px;
  margin-bottom: 20px;
}

.notification-message .success {
  color: green;
}

.notification-message .error {
  color: red;
}

.notification-message .info {
  color: #333;
}

.notification-actions {
  display: flex;
  gap: 20px;
}

.notification-actions .btn-back,
.notification-actions .btn-add-new {
  text-decoration: none;
  padding: 10px 20px;
  border-radius: 5px;
  background-color: #007bff;
  color: white;
  font-weight: bold;
}

.notification-actions .btn-back:hover,
.notification-actions .btn-add-new:hover {
  background-color: #0056b3;
}
</style>
