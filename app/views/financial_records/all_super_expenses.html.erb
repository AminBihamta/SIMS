<h2>All Expenses for <%= @club.Club_Name %></h2>

<table>
  <thead>
    <tr>
      <th>Name of Expense</th>
      <th>Quantity</th>
      <th>Vendor</th>
      <th>Sub-club</th>
      <th>Amount</th>
      <th>Date</th>
    </tr>
  </thead>
  <tbody>
    <% @expenses.each do |expense| %>
      <tr>
        <td><%= link_to expense.Title, expense_details_financial_record_path(expense) %></td>
        <td><%= expense.Quantity %></td>
        <td><%= expense.vendor&.Name || "N/A" %></td> <!-- Display Vendor Name -->
        <td><%= expense.club&.Club_Name || "N/A" %></td>  <!-- Display Sub-club or Super Club Name -->
        <td><%= number_to_currency(expense.Amount, unit: "RM") %></td>
        <td><%= expense.Created_At.strftime("%d/%m/%Y") %></td>
      </tr>
    <% end %>
</table>
