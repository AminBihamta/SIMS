<%= button_to "Add Expense", expense_form_financial_records_path, method: :get %>

<div>
  <%= button_to "Super Club Expenses", "#", method: :get %>
  <%= button_to "Sub-Club Expenses", "#", method: :get %>
</div>

<table>
  <thead>
    <tr>
      <th>Name of Expense</th>
      <th>Equipment</th>
      <th>Quantity</th>
      <th>Sub-Club</th>
      <th>Amount</th>
      <th>Date</th>
    </tr>
  </thead>
  <tbody>
    <% @financial_records.each do |record| %>
      <tr>
        <td><%= link_to record.Title, expense_details_financial_record_path(record) %></td>
        <td><%= record.equipment&.Equipment_Name || "N/A" %></td>
        <td><%= record.Quantity %></td>
        <td><%= record.club&.Club_Name || "N/A" %></td>
        <td><%= number_to_currency(record.Amount, unit: "RM") %></td>
        <td><%= record.Created_At.strftime("%d/%m/%Y") %></td>
      </tr>
    <% end %>
  </tbody>
</table>