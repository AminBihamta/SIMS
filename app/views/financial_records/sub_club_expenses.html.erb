<h2>Total Expenses</h2>
<p><%= number_to_currency(@total_sub_club_expenses, unit: "RM") %></p>

<% if @sub_club_expenses.any? %>
  <div>
    <% @sub_club_expenses.each do |club_name, total_expenses| %>
      <div>
        <h3><%= club_name %></h3>
        <p><%= number_to_currency(total_expenses, unit: "RM") %></p>
        <%= link_to "View Expenses", all_sub_expenses_financial_record_path(id: Club.find_by(Club_Name: club_name).Club_ID), class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
<% else %>
  <p>No sub-club expenses to display.</p>
<% end %>
