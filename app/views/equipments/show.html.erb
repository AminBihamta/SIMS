<div class="equipment-details">
  <div class="equipment-header">
    <h1 class="equipment-name"><%= @equipment.Equipment_Name %></h1>
  </div>

  <div class="equipment-info">
    <p class="equipment-receipt">📜 Receipt: <%= @equipment.financial_record&.Title || "No record associated" %></p>
    <p class="equipment-club">🏢 Club: <%= @equipment.club&.Club_Name || "No club associated" %></p>
    <p class="equipment-vendor">🏷️ Vendor: <%= @equipment.vendor&.Name || "No vendor associated" %></p>
  </div>

  <div class="equipment-actions">
    <%= link_to "Edit", edit_equipment_path(@equipment), id: "open-overlay", class: "button edit-button" %>
    <%= button_to "Delete", @equipment, method: :delete, data: { turbo_confirm: "Are you sure?" } %>
    <%= link_to "Back", "#", onclick: "history.back(); return false;", class: "button back-button" %>
  </div>
</div>


<div class="overlay" id="overlay" style="display: none;">
  <div class="overlay-content">
    <h1>Edit Equipment</h1>
    <!-- Dynamic content (the form) will be loaded here -->
    <div id="overlay-form-content">
      <!-- Placeholder for form -->
    </div>
    <button id="close-overlay">Cancel</button>
  </div>
</div>